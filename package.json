{
	"name": "enough-coding",
	"displayName": "enough coding",
	"description": "Enough coding, now it's time to stop! ",
	"version": "0.0.1",
	"author": {
		"name": "Deb",
		"email": "db.debjyotibanerjee@gmail.com",
		"url": "http://twitter.com/thisisdebjyoti"
	  },
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"timer",
		"productivity",
		"coding",
		"enough",
		"coding timer",
		"self control"
	  ],
	  "galleryBanner": {
		"color": "#41205f",
		"theme": "dark"
	  },
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/justinbieber/enough-coding.git"
	  },
	"icon": "./images/icon.png",
	"bugs": {
	  "url": "https://github.com/justinbiebur/enough-coding/issues",
	  "email": "db.debjyotibanerjee@gmail.com"
	},
	"license": "MIT",
	"contributes": {
		
		"configuration": {
			"title": "Enough Coding",
			"properties": {
			  "enough-coding.duration": {
				"type": "number",
				"scope": "application",
				"default": 0.5,
				"description": "Duration in minutes after which all open files will be saved and closed automatically after a warning"
			  },
			  "enough-coding.active": {
				"type": "boolean",
				"scope": "application",
				"default": true,
				"description": "Turn the extension on or off"
			  }

			 
			}
		}
		 
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"vscode": "^1.1.37"
	}
}
